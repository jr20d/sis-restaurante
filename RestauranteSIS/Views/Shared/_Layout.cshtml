<!DOCTYPE html>
<html lang="es">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>RestySMART - Dashboard</title>

    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <link href="~/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

    <link href="~/Content/sb-admin.min.css" rel="stylesheet">

    <link href="vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

    <link href="~/vendor/fontawesome-free/css/formularios.css" rel="stylesheet" />

    <link href="~/vendor/fontawesome-free/css/carga.css" rel="stylesheet" type="text/css">

    <link href="~/vendor/fontawesome-free/css/mesas.css" rel="stylesheet" />

</head>
<body id="page-top">

    <nav id="menuPrincipal" class="navbar navbar-expand navbar-dark bg-dark static-top">

        <div>
            <button class="btn btn-link btn-sm text-white order-1 order-sm-0" id="sidebarToggle" href="#">
                <i class="fas fa-bars"></i>
            </button>

            <a class="navbar-brand mr-1" href="/">RestySMART</a>
        </div>

        <h6 class="mt-1" style="color: #fff;">Bienvenido&#64; @Session["nombre"].ToString()</h6>

        <!-- Navbar -->
        <ul class="navbar-nav ml-auto ml-md-0">
            <li class="nav-item dropdown no-arrow">
                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <img src="@Session["foto"].ToString()" alt="foto" style="width: 35px; height: 35px; border-radius: 100%;" />
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    <div style="margin: 0 auto; max-width: 150px; max-height: 150px; overflow: hidden; border-radius: 15px;">
                        <img src="@Session["foto"].ToString()" alt="foto" style="width: 100%;" />
                    </div>
                    <a class="dropdown-item" data-toggle="modal" data-target=".cambiar" href="#">Ajustes</a>
                    <button id="salir" class="dropdown-item">Salir</button>
                </div>
            </li>
        </ul>

    </nav>

    <div id="wrapper">

        <!-- Sidebar -->
        <ul id="barraLateral" class="sidebar navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            @if (Int32.Parse(Session["acceso"].ToString()) != 1)
            {
                <li class="nav-item">
                    <a class="nav-link" href="/empleado">
                        <i class="fas fa-fw fa-users"></i>
                        <span>Empleados</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/sucursal">
                        <i class="fas fa-fw fa-building"></i>
                        <span>Sucursales</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/rol">
                        <i class="fas fa-fw fa-user-tag"></i>
                        <span>Cargos</span>
                    </a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-fw fa-utensils"></i>
                        <span>Menu</span>
                    </a>
                    <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                        <h6 class="dropdown-header">Opciones:</h6>
                        <a class="dropdown-item" href="/menu">Menú</a>
                        <a class="dropdown-item" href="/menu/categoria">Categoría</a>
                    </div>
                </li>
            }
            <li class="nav-item">
                <a class="nav-link" href="/mesas">
                    <i class="fas fa-fw fa-table"></i>
                    <span>Mesas</span>
                </a>
            </li>
            @if (Int32.Parse(Session["acceso"].ToString()) != 1)
            {
                <li class="nav-item">
                    <a class="nav-link" href="/factura">
                        <i class="fas fa-fw fa-file-alt"></i>
                        <span>Facturas</span>
                    </a>
                </li>
            }
        </ul>

        <div id="content-wrapper">
            @RenderBody()
            <!-- /.container-fluid -->
            <!-- Sticky Footer -->
            <footer class="sticky-footer">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright © Gestión Restaurantes 2019</span>
                    </div>
                </div>
            </footer>

        </div>
        <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Modal Cambiar contraseña -->

    <div class="modal fade cambiar" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <form class="formulario modal-content bg-light" id="formAgregarRol">
                <div class="modal-header">
                    <h3 class="modal-title" id="myLargeModalLabel">CAMBIAR CONTRASEÑA</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" data-toggle="modal" data-target=".cambiar">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="grupoControles">
                    <div class="controles">
                        <input type="password" id="nuevoPass" name="nuevoPass" class="textbox">
                        <div class="texto" id="placeNPass">Contraseña nueva</div>
                        <button type="button" class="password"><i id="iconoPassword" class="fa fa-eye"></i></button>
                    </div>
                    <div class="controles">
                        <input type="password" id="antiguoPass" name="antiguoPass" class="textbox">
                        <div class="texto" id="anteriorPass">Contraseña anterior</div>
                    </div>
                </div>
                <div class="grupoControles">
                    <button type="button" class="btnEnviar" id="cambiarPassBoton">Cambiar</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Page level plugin JavaScript-->
    <script src="~/vendor/chart.js/Chart.min.js"></script>
    <script src="~/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Scripts/sb-admin.min.js"></script>

    <!-- Demo scripts for this page-->
    <script src="~/Scripts/demo/datatables-demo.js"></script>
    <script src="~/Scripts/demo/chart-area-demo.js"></script>
    <script src="~/vendor/fontawesome-free/js/formulario.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <script>
        document.getElementById("salir").addEventListener("click", function (e) {
            $.ajax({
                method: "POST",
                url: "/sesion/salir",
                cache: false,
                success: function (rst) {
                    if (rst === "OK") {
                        location.reload();
                    }
                }
            });
        });

        document.getElementById("cambiarPassBoton").addEventListener("click", function (e) {
            var nuevo = document.getElementById("nuevoPass");
            var antiguo = document.getElementById("antiguoPass");

            if (nuevo.value.trim() != "" && antiguo.value.trim() != "") {
                $.ajax({
                    method: "POST",
                    url: "/empleado/cambiarpassword",
                    data: {
                        Nuevo: nuevo.value,
                        Anterior: antiguo.value
                    },
                    cache: false,
                    success: function (rst) {
                        if (rst === "OK") {
                            MsgAgregado("Se ha cambiado la contraseña");
                            $(".cambiar").modal("hide");
                            nuevo.value = "";
                            antiguo.value = "";
                            document.getElementById("placeNPass").className = "texto placeholder";
                            document.getElementById("anteriorPass").className = "texto placeholder";
                        }
                        else {
                            MsgNoAgregado(rst);
                        }
                    }
                });
            }
            else {
                MsgNoAgregado("Ingresar la nueva y la anterior contraseña");
            }
        });
    </script>
</body>

</html>